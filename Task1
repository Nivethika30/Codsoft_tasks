import java.util.Random;
import java.util.*;

public class Task1 {
    public static void main(String[] args) {
        Scanner sc = new Scanner(System.in);
        String playAgain;
        int roundwon=0,round=0,totalscore=0;
        do {
            round++;
            Random random = new Random();
            int randomNumber = random.nextInt(100) + 1;
            boolean correct = false;
            int attempts = 0;

            System.out.println("Guess a number between 1 and 100:");
            System.out.println("You have 6 chances");

            while (attempts < 6) {
                attempts++;
                System.out.println("Your " + attempts + " chance:");
                int guess = sc.nextInt();
                sc.nextLine(); 

                if (guess == randomNumber) {
                    System.out.println("You won it!");
                    roundwon++;
                    correct = true;
                    break;
                } else if (guess > randomNumber) {
                    System.out.println("Your guess is too high.");
                } else {
                    System.out.println("Your guess is too low.");
                }
            }

            if(correct)
            {
                if(attempts==1)
                {
                System.out.println("Your score is : "+ 100);
                totalscore+=100;
                }
                else if(attempts==2)
                {
                System.out.println("Your score is : "+ 80);
                totalscore+=80;
                }
                else if(attempts==3)
                {
                System.out.println("Your score is : "+ 60);
                totalscore+=60;
                }
                else if(attempts==4)
                {
                System.out.println("Your score is : "+ 40);
                totalscore+=40;
                }
                else if(attempts==5)
                {
                System.out.println("Your score is : "+ 20);
                totalscore+=20;
                }
                else if(attempts==6)
                {
                System.out.println("Your score is : "+ 10);
                totalscore+=10;
                }
                
            }
            else{
                System.out.println("You lost! The correct number was: " + randomNumber+"\nBetter luck next time...");
            }
            System.out.println("Do you want to play again? (Y/N)");
            playAgain = sc.nextLine().trim(); 

        } while (playAgain.equalsIgnoreCase("Y"));
        if (roundwon >= 1 && round>=2) {
            System.out.println("You played " + round + " rounds and won " + roundwon + (roundwon == 1 ? " round" : " rounds"));
            System.out.println("Total Score you gained : "+totalscore);
        }
        System.out.println("Thanks for playing!");
        sc.close();
    }
}
